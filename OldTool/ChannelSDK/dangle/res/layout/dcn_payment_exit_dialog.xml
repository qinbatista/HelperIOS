<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:text="@string/dcn_pay_exit_content"
                android:textColor="#333333"
                android:textSize="@dimen/dcn_text_size2"
                android:drawablePadding="8dip" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/dcn_switch_account_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dcn_payment_cancel_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/dcn_edit_verify_btn_selector"
                android:text="@string/dcn_pay_exit_confirm"
                android:textColor="#787878"
                android:textSize="@dimen/dcn_text_size2" />

            <Button
                android:id="@+id/dcn_payment_continue_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/dcn_orange_btn_selector"
                android:text="@string/dcn_pay_exit_continue"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dcn_text_size2" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>