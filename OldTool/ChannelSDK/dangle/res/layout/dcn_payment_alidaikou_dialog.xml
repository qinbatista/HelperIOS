<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dcn_sdk_width_little"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/dcn_tvProductName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/dcn_pay_alidaikou_open_hint_title"
            android:textColor="#333"
            android:textSize="@dimen/dcn_text_size2" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/dcn_pay_alidaikou_open_hint_content"
        android:textColor="#bbbbbb"
        android:textSize="@dimen/dcn_text_size3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/dcn_cbNoHint"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/dcn_check"
            android:button="@null"
            android:checked="false"
            android:textColor="#bbbbbb" />

        <TextView
            android:id="@+id/dcn_tvNoHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="@string/dcn_pay_no_hint"
            android:textColor="#bbbbbb"
            android:textSize="@dimen/dcn_text_size3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dcn_btnContinuePay"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:background="@drawable/dcn_white_btn_selector"
            android:text="@string/dcn_pay_alidaikou_open_hint_refuse"
            android:textColor="#bbbbbb"
            android:textSize="@dimen/dcn_text_size1" />

        <Button
            android:id="@+id/dcn_btnOpenSign"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:background="@drawable/dcn_orange_btn_selector2"
            android:text="@string/dcn_pay_open"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dcn_text_size1" />
    </LinearLayout>

</LinearLayout>