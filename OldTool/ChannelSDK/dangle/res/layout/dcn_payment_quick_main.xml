<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/dcn_interval3" >

        <TextView
            android:id="@+id/dcn_tvProductName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="#333"
            android:textSize="@dimen/dcn_text_size1" />

        <Button
            android:id="@+id/dcn_btnExit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/dcn_close" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dcn_tvOrderMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="￥998"
        android:textColor="#ff7800"
        android:textSize="@dimen/dcn_text_size000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:id="@+id/dcn_llPayChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dcn_pay_type"
                android:textColor="#259b24"
                android:textSize="@dimen/dcn_text_size1" />

            <TextView
                android:id="@+id/dcn_tvPayChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="#259b24"
                android:textSize="@dimen/dcn_text_size1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" >"
                android:textColor="#259b24"
                android:textSize="@dimen/dcn_text_size0" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/dcn_tvCountdownBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/dcn_pay_countdown_back_channel"
        android:textColor="#bbbbbb"
        android:textSize="@dimen/dcn_text_size2" />

    <Button
        android:id="@+id/dcn_btnPay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/dcn_orange_btn_selector1"
        android:text="@string/dcn_pay_immediate_payment"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dcn_text_size1" />

</LinearLayout>