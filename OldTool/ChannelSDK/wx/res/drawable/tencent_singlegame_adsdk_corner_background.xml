<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#2F696969"
                android:centerX="50%"
                android:centerY="0"
                android:endColor="#1F696969"
                android:startColor="#1F696969" />

            <corners
                android:bottomLeftRadius="10dip"
                android:bottomRightRadius="10dip"
                android:topLeftRadius="10dip"
                android:topRightRadius="10dip" />
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="1dip"
        android:left="1dip"
        android:right="1dip"
        android:top="1dip">

        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />

            <corners
                android:bottomLeftRadius="9dip"
                android:bottomRightRadius="9dip"
                android:topLeftRadius="9dip"
                android:topRightRadius="9dip" />
        </shape>
    </item>
</layer-list>