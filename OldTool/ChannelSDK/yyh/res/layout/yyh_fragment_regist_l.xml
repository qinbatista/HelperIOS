<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_header_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/yyh_back"
        android:drawablePadding="10dp"
        android:paddingTop="10dp"
        android:text="注册"
        android:textColor="@color/yyh_gray_dark"
        android:textSize="17dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <com.appchina.usersdk.WidgetSetPasswordLayout
                android:id="@+id/set_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_regist"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/yyh_btn_blue_bg"
                android:text="注册"
                android:textColor="@color/yyh_white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_registration_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:text="注册账号表示您同意《应用汇用户注册协议》"
                android:textSize="11dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>