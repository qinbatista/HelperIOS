<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/wd_float_menu_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_marginRight="@dimen/margin_6"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/wd_float_menu_account"
            android:text="@string/wd_account"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_7" />

        <TextView
            android:id="@+id/tv_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_marginRight="@dimen/margin_6"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/wd_float_menu_gift"
            android:text="@string/wd_gift"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_7" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/wd_float_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/wd_float_view_icon_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/wd_image_float_logo" />
    </FrameLayout>

</FrameLayout>