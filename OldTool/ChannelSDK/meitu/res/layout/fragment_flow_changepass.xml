<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/wd_bg_dialog_shape_corner"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="修改密码"
            android:textColor="#288edf"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/wd_iv_pass_find_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/wd_ic_account_close" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/wd_bg_dialog_shape_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="40dip"
            android:layout_marginLeft="8dp"
            android:scaleType="center"
            android:src="@drawable/wd_ic_account_password"
            android:visibility="visible" />

        <com.mice.mtsdk_library.ui.widget.MiceEditText 
            android:id="@+id/wd_et_pass_update_oldpass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/padding_10"
            android:drawableRight="@drawable/wd_ic_account_pass_eye"
            android:ellipsize="end"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:maxEms="18"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_8"
            android:paddingLeft="@dimen/padding_10"
            android:paddingTop="@dimen/padding_10"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@color/wd_login_textColorHint"
            android:textSize="@dimen/text_size_16"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/wd_bg_dialog_shape_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="40dip"
            android:layout_marginLeft="8dp"
            android:scaleType="center"
            android:src="@drawable/wd_ic_account_password"
            android:visibility="visible" />

        <com.mice.mtsdk_library.ui.widget.MiceEditText 
            android:id="@+id/wd_et_pass_update_newpass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/padding_10"
            android:drawableRight="@drawable/wd_ic_account_pass_eye"
            android:ellipsize="end"
            android:hint="请输入6-18位新密码"
            android:inputType="textPassword"
            android:maxEms="18"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_8"
            android:paddingLeft="@dimen/padding_10"
            android:paddingTop="@dimen/padding_10"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@color/wd_login_textColorHint"
            android:textSize="@dimen/text_size_16"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/wd_bg_dialog_shape_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="40dip"
            android:layout_marginLeft="8dp"
            android:scaleType="center"
            android:src="@drawable/wd_ic_account_password"
            android:visibility="visible" />

        <com.mice.mtsdk_library.ui.widget.MiceEditText 
            android:id="@+id/wd_et_pass_update_newconfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/padding_10"
            android:drawableRight="@drawable/wd_ic_account_pass_eye"
            android:ellipsize="end"
            android:hint="请确认新密码"
            android:inputType="textPassword"
            android:maxEms="18"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_8"
            android:paddingLeft="@dimen/padding_10"
            android:paddingTop="@dimen/padding_10"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@color/wd_login_textColorHint"
            android:textSize="@dimen/text_size_16"
             />

    </LinearLayout>

    <Button
        android:id="@+id/wd_btn_pass_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/wd_bg_account_btn_blue_selector"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/wd_color_white"
        android:textSize="@dimen/text_size_14" />


</LinearLayout>